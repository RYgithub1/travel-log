.header
  .header__title
    = link_to "About Me", aboutmes_path, class: "header__title--text"
  .header__right
    = link_to current_user.name, user_path(current_user), class: "header__right--btn"
    = link_to "ノックノック画面に戻る", root_path, class: "header__right--btn"
    = link_to "新規プロフィール作成はこちら", new_aboutme_path, class: "header__right--btn"
.contents
  -# = yield
  .postTitle
    = @user.name

  - @abouts.each do |about|
    .content
      .content__left
        .content__left--image

      .content__right
        .content__right__top
          = link_to about.content, aboutmes_path(about.user), class: "content__right__top--title"
        .content__right__bottom
          .content__right__bottom--userName
            = image_tag about.image, class: "content__right__bottom--userName--btn"
            = link_to about.url, aboutmes_path(about.user), class: "content__right__bottom--userName--btn"
          .content__right__bottom--date
            = about.created_at